<div id="container_p">
   <div class="container pt-5">
      <div class="notice">
         <% if flash[:notice] %>
            <div class="alert alert-success alert-dismissible show fade">
               <%= flash[:notice] %>
               <button type="button" class="close" data-dismiss="alert">
                  <span>&times;</span>
               </button>
            </div>
         <% end %>
      </div> 
      <div style="text-align: center; paddinng-top: 30px"><h1>Réservations en cours</h1></div>
      <div class="row border-bottom border-dark">
         <% @bookings.each do |booking| %>
            <% if booking.travel.date > Date.today %>
               <div class="col-12 col-sm-12 col-md-6 col-lg-4 my-3">
                  <section class="card bg-light text-dark" id="card-hover">
                     <div class="card-body">
                        <p class="d-flex justify-content-around"><%= booking.travel.starting_station.city %> <i class="bi bi-bus-front"></i> <%= booking.travel.destination_station.city %></p>
                        <p class="d-flex justify-content-around">Départ prévu le <%= booking.travel.formatted_date %> à <%= booking.travel.formatted_time %></p>
                        <span class="d-flex justify-content-around"> 
                           <%= link_to "Détails", booking_path(booking.confirmation), class:"btn btn-outline-dark"%>
                        </span>
                     </div>
                  </section>
               </div>
            <% end %>   
         <% end %>
      </div>
      <div style="text-align: center;"><h1>Réservations expirées</h1></div>
      <div class="row">
         <% @bookings.each do |booking| %>
            <% if booking.travel.date <= Date.today %>
               <div class="col-12 col-sm-12 col-md-6 col-lg-4 my-3">
                  <section class="card bg-light text-dark">
                     <div class="card-body">
                        <p class="d-flex justify-content-around"><%= booking.travel.starting_station.city %> <i class="bi bi-bus-front"></i> <%= booking.travel.destination_station.city %></p>
                        <p class="d-flex justify-content-around">Départ prévu le <%= booking.travel.formatted_date %> à <%= booking.travel.formatted_time %></p>
                        <span class="d-flex justify-content-around"> 
                           <%= link_to "Détails", booking_path(booking.confirmation), class:"btn btn-outline-dark"%>
                        </span>
                     </div>
                  </section>
               </div>
            <% end %>   
         <% end %>
      </div>
   </div>
</div>